@model IEnumerable<addtocart.Models.tbl_product>

@{
    ViewBag.Title = "Index";
}
<div class="container">



    <div class="row">



        @foreach (var item in Model)
        {

            <div class="col-md-2">

                <img  style="min-height:200px;width:200px" src="@Url.Content(item.pro_image)"/>
                <h4 style="text-align:center">@item.pro_name </h4>
                <h5 style="text-align:center">@item.pro_price </h5>
                <a class="btn btn-danger" href="#"> Add to Cart </a>
            </div>

        }




    </div>


</div>